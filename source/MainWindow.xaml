<Window x:Class="OptimalWeightApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Optimal Weight Calculator" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="1" 
                Padding="20" 
                Margin="20" 
                CornerRadius="8"
                Background="{DynamicResource MaterialDesignCardBackground}"
                materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <StackPanel>
                <TextBlock Text="Optimal Weight Calculator" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Height (cm):" 
                               VerticalAlignment="Center" 
                               Width="100" 
                               Foreground="White"/>
                    <TextBox x:Name="HeightTextBox" 
                             Width="200" 
                             materialDesign:HintAssist.Hint="Enter height (130-220)"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Weight (kg):" 
                               VerticalAlignment="Center" 
                               Width="100" 
                               Foreground="White"/>
                    <TextBox x:Name="WeightTextBox" 
                             Width="200" 
                             materialDesign:HintAssist.Hint="Enter weight (40-170)"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Gender:" 
                               VerticalAlignment="Center" 
                               Width="100" 
                               Foreground="White"/>
                    <ComboBox x:Name="GenderComboBox" Width="200">
                        <ComboBoxItem Content="Male" IsSelected="True"/>
                        <ComboBoxItem Content="Female"/>
                    </ComboBox>
                </StackPanel>
                
                <Button x:Name="CalculateButton" 
                        Content="Calculate" 
                        Width="150" 
                        HorizontalAlignment="Center" 
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        Click="CalculateButton_Click"/>
                
                <TextBlock x:Name="ResultTextBlock" 
                           TextWrapping="Wrap" 
                           FontSize="16" 
                           Foreground="White" 
                           Margin="0,20,0,0"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
